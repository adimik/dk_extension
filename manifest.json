{
  "manifest_version": 2,
  "name": "Divoké Kmeny Extension",
  "version": "2.0",
  "description": "Rozšíření pro Divoké Kmeny s více moduly.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "scripts": ["core/updater.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.divokekmeny.cz/*", "https://*.divokekmeny.sk/*"],
      "js": ["modules/auto_scaveng.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Zkontrolovat aktualizace",
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "moje-rozsireni@firefox",
      "update_url": "https://raw.githubusercontent.com/adimik/dk_extension/main/updates.json"
    }
  }
}
