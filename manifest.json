{
  "manifest_version": 3,
  "name": "Divoké Kmeny Extension",
  "version": "1.0",
  "description": "Rozšíření pro Divoké Kmeny s více moduly.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "core/updater.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.divokekmeny.cz/*", "https://*.divokekmeny.sk/*"],
      "js": ["modules/auto_scaveng.js"]
    }
  ],
  "host_permissions": ["https://*.githubusercontent.com/*"],
  "update_url": "https://your-github-repo-url/updates.xml"
}
